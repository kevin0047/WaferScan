<Window x:Class="WaferScan.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:WaferScan.ViewModels"
        mc:Ignorable="d"
        Title="Wafer Image Generator" Height="450" Width="800">
    <Window.DataContext>
        <viewmodels:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Original Image -->
        <Image Grid.Column="0" Source="{Binding OriginalImage}" Stretch="Uniform" Margin="10"/>

        <!-- Generate Button -->
        <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="10">
            <Button Content="Generate New Image" Command="{Binding GenerateImageCommand}" 
                    Padding="10,5" Margin="0,0,0,10"/>
            <TextBlock Text="Original" HorizontalAlignment="Center" Margin="0,0,0,5"/>
            <TextBlock Text="Generated" HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Generated Image -->
        <Image Grid.Column="2" Source="{Binding GeneratedImage}" Stretch="Uniform" Margin="10"/>
    </Grid>
</Window>